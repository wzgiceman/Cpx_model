<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_exit_dialog"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingTop="20dp">

    <ListView
        android:id="@+id/ExitDialog_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/c_ffffff"
        android:dividerHeight="10dp"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="35dp">

        <RadioButton
            android:id="@+id/Cancel_btn"
            style="@style/exit_dialog_tv_style"
            android:layout_marginEnd="45dp"
            android:text="@string/exit_dialog_Cancel"
            android:textColor="@color/c_334139" />

        <RadioButton
            android:id="@+id/Drop_btn"
            style="@style/exit_dialog_tv_style"
            android:text="@string/tips_dialog_Drop"
            android:textColor="@color/c_00732F" />
    </LinearLayout>

</LinearLayout>